<section class="map-wrapper">
    <div class="map-container">
        <div class="about-content-left map-text">
            <h1>Entre em contato <br />com a nossa equipe</h1>
          
            <div class="map-icon">

                <p style="text-align: left; display: flex; justify-content: flex-end; align-items: center;">
                    <img src="~/images/site/tel-contato.svg" style="width: 12px; margin-right: 10px;" />
                    <a href="tel:@(Model.Telefone.Replace("(", "").Replace(")", "").Replace(" ", ""))" target="_blank" style="-webkit-text-stroke-width: thin;font-size: large;">@(Model.Telefone)</a>
                </p>

                <p style="text-align: left; display: flex; justify-content: flex-end; align-items: center;">
                    <img src="~/images/site/whatts-contato.svg" style="width: 23px; margin-right: 10px;" />
                    <a href="tel:@(Model.Celular.Replace("(", "").Replace(")", "").Replace(" ", ""))" target="_blank" style="-webkit-text-stroke-width: thin;font-size: large;">@(Model.Celular)</a>
                </p>

            </div>

            <div class="map-info">
                <div>
                    <i class="fa-regular fa-clock"></i>
                </div>

                <div class="map-info-text">
                    <h5 class="negrito" style="font-size: large; ">Horário de Atendimento:</h5>
                    <p>
                        <span style=" -webkit-text-stroke-width: thin;font-size: large;line-height: 1.5;">@Html.Raw(@Model.HorarioAtendimento)</span>
                    </p>
                </div>
            </div>
        </div>

        <div class="map-info-text">
            <iframe src="@Model.LinkMapa"
                    width="500" height="230" style="border: 2px solid #fff"
                    allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
            </iframe>


            <p style="display: flex; margin-top: 10px;align-items: center;  line-height: 1.5;">
                <img src="~/images/site/mapa-contato.svg" style="width: 27px; margin-right: 20px;" />
                <a href="@Model.LinkEndereco" style="-webkit-text-stroke-width: thin;font-size: large;"
                   target="_blank">
                    @Html.Raw(@Model.Endereco)
                </a>
            </p>

        </div>
    </div>
</section>

<script>
    document.getElementById('enderecoLink').addEventListener('click', function (event) {
        event.preventDefault();
        var endereco = encodeURIComponent('@Model.Endereco');
        var googleMapsUrl = 'https://www.google.com/maps/search/?api=1&query=' + endereco;
        window.open(googleMapsUrl, '_blank');
    });
</script>