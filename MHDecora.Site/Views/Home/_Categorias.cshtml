<section class="card-wrapper" id="categorias">
    <div class="card-title">
        <h1>Conheça nossas montagens</h1>
    </div>
    <div class="card-container">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-image" style="white-space: nowrap;">
                        <img src="@item.CaminhoImagem" alt="" />
                        <h1>@item.Nome</h1>
                    </div>

                    <div class="card-content">
                        <p>
                            @item.Descricao
                        </p>
                            <a href="@Url.Action("Consulta", "Home", new { categoriaId = item.Id })" class="card-button">Saiba mais</a>
                    </div>
                </div>
            }
        }
    </div>
</section>