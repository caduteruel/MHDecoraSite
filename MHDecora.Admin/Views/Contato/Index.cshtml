@model MHDecora.Admin.Domain.Entities.Contato

@{
    string titulo = TempData["Titulo"] as string;
    string mensagem = TempData["Mensagem"] as string;
    string tipoAlerta = TempData["TipoAlerta"] as string;
}

@if (!string.IsNullOrEmpty(mensagem))
{
    <div id="autoCloseAlert" class="alert alert-@tipoAlerta alert-dismissible fade show" role="alert">
        <strong>@titulo</strong> @mensagem
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
}

<div class="row">
    <div class="col-xl-12">
        <!-- Basic Examples -->
        <div class="card card-default">
            <div class="card-header">
                <h2>Editar Contato</h2>
            </div>
            <div class="card-body">

                <form id="formEditar" asp-action="Editar" method="post">
                    <input hidden="hidden" id="Id" name="Id" value="@Model.Id">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="fname">Endereço</label>
                                <input name="endereco" id="endereco" class="form-control" value="@Model.Endereco" placeholder="Digite o endereço">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="fname">Link do Endereço para Google Maps</label>
                                <input name="linkEndereco" id="linkEndereco" class="form-control" value="@Model.LinkEndereco" placeholder="Digite link do endereço">
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="fname">Link do Google Maps</label>
                                <input name="linkMapa" id="linkMapa" class="form-control" value="@Model.LinkMapa" placeholder="Digite link do mapa">
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="fname">Horario de Atendimento</label>
                                <input name="horarioAtendimento" id="horarioAtendimento" class="form-control" value="@Model.HorarioAtendimento" placeholder="Digite o horario de atendimento">
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="fname">Celular</label>
                                <input name="celular" id="celular" class="form-control" value="@Model.Celular" placeholder="Digite o celular">
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="fname">Telefone</label>
                                <input name="telefone" id="telefone" class="form-control" value="@Model.Telefone" placeholder="Digite o telefone">
                            </div>
                        </div>
                    </div>
                    <div class="form-footer pt-5 border-top d-flex justify-content-between">
                
                        <div>
                            <button type="submit" class="btn btn-success">Salvar</button>
                            <button type="button" class="btn btn-light ml-2" onclick="cancelar()">Cancelar</button>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function cancelar() {
            $("#endereco").val("");
            $("#horarioAtendimento").val("");
            $("#celular").val("");
            $("#telefone").val("");
            $("#linkEndereco").val("");
            $("#linkMapa").val("");
        }
    </script>
}