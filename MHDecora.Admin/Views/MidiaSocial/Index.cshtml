@model MHDecora.Admin.Domain.Entities.MidiaSocial

@{
    string titulo = TempData["Titulo"] as string;
    string mensagem = TempData["Mensagem"] as string;
    string tipoAlerta = TempData["TipoAlerta"] as string;
}

@if (!string.IsNullOrEmpty(mensagem))
{
    <div id="autoCloseAlert" class="alert alert-@tipoAlerta alert-dismissible fade show" role="alert">
        <strong>@titulo</strong> @mensagem
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
}

<div class="row">
    <div class="col-xl-12">
        <!-- Basic Examples -->
        <div class="card card-default">
            <div class="card-header">
                <h2>Editar Mídias Sociais</h2>
            </div>
            <div class="card-body">

                <form id="formEditar" asp-action="Editar" method="post">
                    <div class="row">
                        <input hidden="hidden" id="Id" name="Id" value="@Model.Id">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="fname">Instagram</label>
                                <input name="instagram" id="instagram" class="form-control" value="@Model.Instagram" placeholder="Digite o instagram">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="fname">Facebook</label>
                                <input name="facebook" id="facebook" class="form-control" value="@Model.Facebook" placeholder="Digite o facebook">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="fname">WhatsApp</label>
                                <input name="whatsapp" id="whatsapp" class="form-control" value="@Model.WhatsApp" placeholder="Digite o whatsapp">
                            </div>
                        </div>
                    </div>
                    <div class="form-footer pt-5 border-top d-flex justify-content-between">
                        
                        <div>
                            <button type="submit" class="btn btn-success">Salvar</button>
                            <button type="button" class="btn btn-light ml-2" onclick="cancelar()">Cancelar</button>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function cancelar() {
            $("#instagram").val("");
            $("#facebook").val("");
            $("#whatsapp").val("");
        }
    </script>
}