@model List<MHDecora.Admin.Domain.Entities.Banner>

@{
    ViewBag.Title = "Adicionar Banner";
    string titulo = TempData["Titulo"] as string;
    string mensagem = TempData["Mensagem"] as string;
    string tipoAlerta = TempData["TipoAlerta"] as string;
}

@if (!string.IsNullOrEmpty(mensagem))
{
@*     <div class="alert btn-@tipoAlerta text-left" role="alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
        @mensagem
    </div> *@

    <div class="alert alert-@tipoAlerta alert-dismissible fade show" role="alert">
        <strong>@titulo</strong> @mensagem.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
}

<div class="row">

  <div class="col-xl-12">
    <!-- Basic Examples -->
    <div class="card card-default">
      <div class="card-header">
        <h2>Adicionar Banner</h2>
       


      </div>
      <div class="card-body">

      <form id="formAdicionar" asp-action="Adicionar" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="fname">Link</label>
                        <input name="descricao" class="form-control" placeholder="Link da imagem" id="descricao">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="ordemSelect">Ordem de Apresentação</label>
                        <!-- Altere o nome do ID para um valor exclusivo -->
                        <select name="ordem" class="form-control" id="ordem">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Selecione o Arquivo</label>
                        <input type="file" name="arquivo" class="form-control-file" id="fileInput" accept="image/*">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4 mb-2">
                    <div class="form-group">
                        <label id="labelImage" for="fname" style="display:none">Imagem</label>
                        <img id="previewImage" src="#" class="img-fluid" alt="Imagem do Banner" style="display:none" />
                    </div>
                </div>
            </div>
            <div class="form-footer pt-5 border-top d-flex justify-content-between">
                    <a href="@Url.Action("Index", "Banner")" class="btn btn-primary text-left">
                    <i class="mdi mdi-undo mr-1"></i> Voltar
                </a>
                <div>
                    <button type="submit" class="btn btn-success">Salvar</button>
                    <button type="submit" class="btn btn-light ml-2">Cancelar</button>
                </div>
            </div>
        </form>

      </div>
    </div>

   
    </div>

</div>

  <script>
        // Função para exibir a visualização da imagem quando um arquivo é selecionado
        function previewFile() {
            var label = document.getElementById('labelImage');
            var preview = document.getElementById('previewImage');
            var fileInput = document.getElementById('fileInput').files[0];
            var reader = new FileReader();

            reader.onloadend = function () {
                //$("#imagem").attr('display', 'inline-block');
                preview.src = reader.result;
                preview.style.display = 'block';
                label.style.display = 'block';
            }

            if (fileInput) {
                reader.readAsDataURL(fileInput);
            } else {
                preview.src = '';
                preview.style.display = 'none';
            }
        }

        // Adiciona um listener de mudança no campo de entrada do arquivo
        document.getElementById('fileInput').addEventListener('change', previewFile);
  </script>
  
