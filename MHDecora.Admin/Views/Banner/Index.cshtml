@model List<MHDecora.Admin.Domain.Entities.Banner>

    <!-- Products Inventory -->
    <div class="card card-default">
        <div class="card-header">
            <h2>Banners</h2>

            <a href="@Url.Action("Adicionar", "Banner")" class="btn btn-primary">
                <i class="mdi mdi-plus mr-1"></i> Adicionar
            </a>

        </div>
        <div class="card-body">
            <div class="collapse" id="collapse-data-tables">
                <pre class="language-html mb-4">

                </pre>
            </div>
            <table id="productsTable" class="table table-hover table-product" style="width:100%">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Ordem de Apresentação</th>
                        <th>Link da Imagem</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        if (Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                    <tr>
                                        <td class="py-0">
                                            <img src="images/products/products-xs-01.jpg" style="margin-top: 8px;" alt="Product Image">
                                        </td>
                                        <td>1</td>
                                        <td>/Decoracao</td>
                                        <td>
                                            <div class="dropdown">
                                                <a class="dropdown-toggle icon-burger-mini" href="#" role="button" id="dropdownMenuLink"
                                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static">
                                                </a>

                                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                                    <a class="dropdown-item" href="@Url.Action("Editar", "Banner", new { bannerId = @item.Id })">Editar</a>
                                                    <a class="dropdown-item" data-toggle="modal" data-target="#modalApagar" data-id="@item.Id">Excluir</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                            }                            
                        }
                    }

                </tbody>
            </table>

        </div>
    </div>

@* Apagar *@
<div class="modal fade" id="modalApagar" tabindex="-1" role="dialog" aria-labelledby="modalApagarLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalApagarLabel">Confirmar Exclusão</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                Tem certeza que deseja excluir este banner?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="confirmarExclusao"">Sim</button>
                <button type="button" class="btn btn-light" data-dismiss="modal">Não</button>                
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var bannerId;

            $('#modalApagar').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // Botão que abriu o modal
                bannerId = button.data('id'); // Extrair informação dos atributos data-*
            });

            // Excluir
            $('#confirmarExclusao').click(function () {
                $.ajax({
                    url: '@Url.Action("Excluir", "Banner")',
                    type: 'POST',
                    data: { bannerId: bannerId },
                    success: function () {
                        $('#excluirModal').modal('hide');
                        location.reload(); // Recarrega a página para atualizar a lista de pessoas
                    },
                    error: function () {
                        alert('Ocorreu um erro ao tentar excluir esse banner.');
                    }
                });
            });
        });
    </script>
}
