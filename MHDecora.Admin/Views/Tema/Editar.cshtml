@model MHDecora.Admin.Domain.Entities.Tema

@{
    ViewBag.Title = "Editar Tema";
    string titulo = TempData["Titulo"] as string;
    string mensagem = TempData["Mensagem"] as string;
    string tipoAlerta = TempData["TipoAlerta"] as string;
}

@if (!string.IsNullOrEmpty(mensagem))
{
    <div id="autoCloseAlert" class="alert alert-@tipoAlerta alert-dismissible fade show" role="alert">
        <strong>@titulo</strong> @mensagem
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
}

<div id="msgAlert"></div>

<div class="row">
    <div class="col-xl-12">
        <!-- Basic Examples -->
        <div class="card card-default">
            <div class="card-header">
                <h2>Adicionar Tema</h2>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Editar", "Tema", FormMethod.Post, new { enctype = "multipart/form-data", id = "formEditar" }))
                {
                    <input hidden="hidden" id="Id" name="Id" value="@Model.Id">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="titulo">Título</label>
                                <input name="titulo" class="form-control" placeholder="Título da sessão" id="titulo" value="@Model.Titulo">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="texto">Descrição</label>
                                <input name="texto" class="form-control" placeholder="Descrição da imagem" id="texto" value="@Model.Texto">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="fileInput">Selecione o Arquivo</label>
                                <input type="file" name="arquivo" class="form-control-file" id="fileInput" accept="image/*">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 mb-2">
                            <div class="form-group">
                                <label id="labelImage" for="fname" style="display:none">Imagem</label>
                                <img id="previewImage" src="@Model.CaminhoImagem" class="img-fluid" alt="Imagem do Banner" style="display:none" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 mb-5">
                            <label id="labelImage5" for="tag">Escolha as Tags</label>
                            <select class="form-select" name="tag" id="tag" data-placeholder="Digite a tag" multiple>
                                <option value="">-- Escolha as tags --</option>
                                @{
                                    var itens = ViewBag.Tags;

                                    if (itens != null)
                                    {
                                        var itensSelecionados = Model.TagsList;  // Itens que já estão selecionados

                                        foreach (var item in itens)
                                        {
                                            if (itensSelecionados == null)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                            else
                                            {
                                                if (itensSelecionados.Any(x => x.Id.ToString() == item.Value))
                                                {
                                                    <option value="@item.Value" selected="selected">@item.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            }
                                        }
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-footer pt-5 border-top d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Banner")" class="btn btn-primary text-left">
                            <i class="mdi mdi-undo mr-1"></i> Voltar
                        </a>
                        <div>
                            <button type="submit" class="btn btn-success">Salvar</button>
                            <button type="button" class="btn btn-light ml-2" onclick="cancelar()">Cancelar</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tag').select2({
                theme: "bootstrap-5",
                width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
                placeholder: $(this).data('placeholder'),
                closeOnSelect: false,
            });

            $('#formAdicionar').submit(function (e) {
                e.preventDefault(); // Evita o envio padrão do formulário

                var descricao = $("#texto").val();
                var titulo = $("#titulo").val();
                var fileInput = $("#fileInput").val();

                if (!descricao || !titulo || !fileInput) {
                    alert("Atenção!", "Verifique os campos se estão preenchidos.", "warning");
                    return;
                }

                // Se todos os campos estiverem preenchidos, envie o formulário
                this.submit(); // Aqui corrigimos para enviar o formulário corretamente
            });
        });

        function cancelar() {
            $("#texto").val("");
            $("#titulo").val("");

            $('#fileInput').wrap('<form>').closest('form').get(0).reset();
            $('#fileInput').unwrap();

            var label = document.getElementById('labelImage');
            var preview = document.getElementById('previewImage');

            preview.src = '';
            preview.style.display = 'none';
            label.style.display = 'none';

            var preview = document.getElementById('previewImage');
        }

        function previewFile() {
            var label = document.getElementById('labelImage');
            var preview = document.getElementById('previewImage');
            var fileInput = document.getElementById('fileInput').files[0];
            var reader = new FileReader();

            reader.onloadend = function () {
                preview.src = reader.result;
                preview.style.display = 'block';
                label.style.display = 'block';
            }

            if (fileInput) {
                reader.readAsDataURL(fileInput);
            } else {
                preview.src = '';
                preview.style.display = 'none';
            }
        }

        function previewFile() {
            // var label = document.getElementById('labelImage1')
            alert("EREWr");
            var preview = document.getElementById('previewImage');
            var fileInput = document.getElementById('fileInput').files[0];
            var reader = new FileReader();

            reader.onloadend = function () {
                //$("#imagem").attr('display', 'inline-block');
                preview.src = reader.result;
                preview.style.display = 'block';
                // label.style.display = 'block';
            }

            if (fileInput) {
                reader.readAsDataURL(fileInput);
            } else {
                preview.src = '';
                preview.style.display = 'none';
            }
        }

        document.getElementById('fileInput').addEventListener('change', previewFile);
    </script>
}
