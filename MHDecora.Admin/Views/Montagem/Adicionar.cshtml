@model List<MHDecora.Admin.Domain.Entities.Montagem>

@{
    ViewBag.Title = "Adicionar Banner";
    string titulo = TempData["Titulo"] as string;
    string mensagem = TempData["Mensagem"] as string;
    string tipoAlerta = TempData["TipoAlerta"] as string;
}

@if (!string.IsNullOrEmpty(mensagem))
{
    <div id="autoCloseAlert" class="alert alert-@tipoAlerta alert-dismissible fade show" role="alert">
        <strong>@titulo</strong> @mensagem
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
}

<div id="msgAlert"></div>

<div class="row">

    <div class="col-xl-12">
        <!-- Basic Examples -->
        <div class="card card-default">
            <div class="card-header">
                <h2>Adicionar Montagem</h2>
            </div>
            <div class="card-body">

                @using (Html.BeginForm("Salvar", "Montagem", FormMethod.Post, new { enctype = "multipart/form-data", id = "formAdicionar" }))
                {
                    <div class="row">
                        <div class="col-sm-5">
                            <div class="form-group">
                                <label for="fname">Título da Sessão</label>
                                <input name="titulo" class="form-control" placeholder="Título da sessão" id="titulo">
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="fname">Texto em cima da Imagem</label>
                                <input name="textoImagem" class="form-control" placeholder="Texto da imagem" id="textoImagem">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="fname">Link do Botão</label>
                                <input name="linkBotao" class="form-control" placeholder="Link do botão" id="linkBotao">
                            </div>
                        </div>
                        
                    </div>
                    <div class="row">
                        <div class="col-sm-5">
                            <div class="form-group">
                                <label for="fname">Texto em baixo da Imagem</label>
                                <textarea class="form-control" id="texto" name="texto" rows="5"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="exampleFormControlFile1">Selecione o Arquivo</label>
                                <input type="file" name="arquivo" class="form-control-file" id="fileInput" accept="image/*">
                            </div>
                        </div>                        
                    </div>
                    <div class="row">
                        <div class="col-sm-4 mb-2">
                            <div class="form-group">
                                <label id="labelImage" for="fname" style="display:none">Imagem</label>
                                <img id="previewImage" src="#" class="img-fluid" alt="Imagem do Banner" style="display:none" />
                            </div>
                        </div>
                    </div>
                    <div class="form-footer pt-5 border-top d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Montagem")" class="btn btn-primary text-left">
                            <i class="mdi mdi-undo mr-1"></i> Voltar
                        </a>
                        <div>
                            <button type="submit" class="btn btn-success">Salvar</button>
                            <button type="button" class="btn btn-light ml-2" onclick="cancelar()">Cancelar</button>
                        </div>
                    </div>
                }
            </div>
        </div>


    </div>

</div>
@section Scripts {
    <script>


        $(document).ready(function () {
            $('#formAdicionar').submit(function (e) {
                e.preventDefault(); // Evita o envio padrão do formulário

                var titulo = $("#titulo").val();
                var textoImagem = $("#textoImagem").val();
                var linkBotao = $("#linkBotao").val();
                var texto = $("#texto").val();

                var fileInput = $("#fileInput").val();

                if (!titulo || !textoImagem || !linkBotao || !texto || !fileInput) {
                    Alert("Atenção!", "Verifique os campos se estão preenchidos.", "warning");
                    return;
                }

                // Se todos os campos estiverem preenchidos, envie o formulário
                this.submit(); // Aqui corrigimos para enviar o formulário corretamente
            });
        });

        // Função para exibir a visualização da imagem quando um arquivo é selecionado
        function cancelar() {
            $("#titulo").val("");
            $("#textoImagem").val("");
            $("#linkBotao").val("");
            $("#texto").val("");
            
            $('#fileInput').wrap('<form>').closest('form').get(0).reset();
            $('#fileInput').unwrap();

            var label = document.getElementById('labelImage');
            var preview = document.getElementById('previewImage');

            preview.src = '';
            preview.style.display = 'none';
            label.style.display = 'none';
        }

        // Função para exibir a visualização da imagem quando um arquivo é selecionado
        function previewFile() {
            var label = document.getElementById('labelImage');
            var preview = document.getElementById('previewImage');
            var fileInput = document.getElementById('fileInput').files[0];
            var reader = new FileReader();

            reader.onloadend = function () {
                //$("#imagem").attr('display', 'inline-block');
                preview.src = reader.result;
                preview.style.display = 'block';
                label.style.display = 'block';
            }

            if (fileInput) {
                reader.readAsDataURL(fileInput);
            } else {
                preview.src = '';
                preview.style.display = 'none';
            }
        }

        // Adiciona um listener de mudança no campo de entrada do arquivo
        document.getElementById('fileInput').addEventListener('change', previewFile);
    </script>

}